@model MDS.Models.Hotel

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .custom-header {
            font-family: 'Lobster', cursive;
            color: #ff6600;
        }


        .custom-button {
            font-family: 'Lobster', cursive;
            background-color: #3399ff;
            color: #ffffff;
            border: 2px solid #3399ff;
            padding: 10px 20px;
            font-size: 16px;
        }

            .custom-button:hover {
                background-color: #1a8cff;
                color: #000000;
                border-color: #1a8cff;
            }

    </style>
</head>

<h2 class="text-center mt-5 custom-header">Editează Hotelul</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" action="/Hoteluri/Edit/@Model.Id">

                @Html.Label("Nume", "Nume")
                <br />
                @Html.TextBox("Nume", null, new { @class = "form-control" })
                <br />

                @Html.Label("Locatie", "Adresă")
                <br />
                @Html.TextBox("Locatie", null, new { @class = "form-control" })
                <br />
                @Html.Label("Facilitati", "Facilități")
                <br />
                @Html.TextArea("Facilitati", Model.Facilitati, new { @class = "form-control summernote" })
                @Html.ValidationMessageFor(m => m.Facilitati, null, new { @class = "text-danger" })
                <br />


                <label>Selectați țara</label>
                @Html.DropDownListFor(m => m.TaraId, new SelectList(Model.Tari, "Value", "Text"),
                "Selectați țara", new { @class = "form-control" })
                <br />

                <button class="btn btn-success custom-button" type="submit">Aplică modificările</button>

            </form>
        </div>
    </div>
</div>