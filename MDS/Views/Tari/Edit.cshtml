@model MDS.Models.Tara

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .custom-header {
            font-family: 'Lobster', cursive;
            color: #ff6600;
        }


        .custom-button {
            font-family: 'Lobster', cursive;
            background-color: #3399ff;
            color: #ffffff;
            border: 2px solid #3399ff;
            padding: 10px 20px;
            font-size: 16px;
        }

            .custom-button:hover {
                background-color: #1a8cff;
                color: #000000;
                border-color: #1a8cff;
            }

    </style>
</head>

<h2 class="text-center mt-5 custom-header">Editează țara</h2>

@using (Html.BeginForm("Edit", "Tari", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Nume, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Nume, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nume, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Aplică modificările" class="btn btn-primary custom-button" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
